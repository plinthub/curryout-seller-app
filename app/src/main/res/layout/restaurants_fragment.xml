<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:background="@drawable/restaurant_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="90dp"
        android:lineHeight="22dp"
        android:layout_marginEnd="90dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:text="You haven't added your restaurant yet."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="90dp"
        android:lineHeight="22dp"
        android:layout_marginEnd="90dp"
        android:textAlignment="center"
        android:textColor="@color/colorFour"
        android:text="Add your restaurant details and start selling!"/>



    <TextView
        android:id="@+id/txt_regYourRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@drawable/txt_primary_click"
        android:text="Register Your Restaurant>>"/>

</LinearLayout>